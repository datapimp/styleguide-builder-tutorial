source 'https://rubygems.org'

gem "middleman", "~>3.0.13"
gem "middleman-sprockets"

# Slim (http://slim-lang.org) is a templating language similar to HAML but with a slightly nicer syntax.
gem "slim"

# Skim allows us to use the slim templating language, with coffeescript, in the browser.
# By naming files template.jst.skim, we will have access to template functions in the window.JST object
gem "skim"

# Sass is the famous stylesheet language
gem "sass"

#gem "code_sync", path: File.join(ENV['HOME'],'Projects','code_sync')
gem "code_sync", git: "https://github.com/datapimp/code_sync.git"
